<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NepaliActivity">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f0ffff">

        <RelativeLayout
            android:id="@+id/news_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/news_ratopati"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/ratopati" />

                <ImageView
                    android:id="@+id/news_gorkha"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/gorkhapatra" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/news_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_a">

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/news_setopati"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/setopati" />

                <ImageView
                    android:id="@+id/news_kantipur"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/kantipur" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/news_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_b">

            <LinearLayout
                android:id="@+id/third"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/news_annapurna"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/annapurna" />

                <ImageView
                    android:id="@+id/news_nagarik"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/nagarik" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/news_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/news_c">

            <LinearLayout
                android:id="@+id/fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/news_online"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/onlinekhabar" />

                <ImageView
                    android:id="@+id/news_nepalsamachar"
                    android:layout_width="320dp"
                    android:layout_height="120dp"
                    android:layout_margin="@dimen/dp_30"
                    android:layout_weight="1"
                    android:background="@drawable/nepalsamachar" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</ScrollView>